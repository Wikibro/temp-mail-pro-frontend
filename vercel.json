{
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "tempmailpk.vercel.app" }
      ],
      "destination": "https://tempmailpk.com/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "host", "value": "www.tempmailpk.com" }
      ],
      "destination": "https://tempmailpk.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    { 
      "source": "/sitemap.xml", 
      "destination": "https://temp-mail-pro-backend.onrender.com/sitemap.xml" 
    },
    { 
      "source": "/robots.txt", 
      "destination": "https://temp-mail-pro-backend.onrender.com/robots.txt" 
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
